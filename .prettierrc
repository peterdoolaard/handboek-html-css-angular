{
  "proseWrap": "preserve",
  "printWidth": 120,
  "tabWidth": 2,

  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["**/*.css", "**/*.scss", "**/*.html"],
      "options": {
        "singleQuote": false
      }
    }
  ],
  "bracketSpacing": true,
  "bracketSameLine": false,
  "singleAttributePerLine": true
}
